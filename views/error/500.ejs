<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-1 text-muted">500</h1>
            <h2 class="mb-4">Server Error</h2>
            <p class="lead mb-4">Something went wrong on our end. Please try again later.</p>
            
            <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
                <div class="mt-4 text-start">
                    <h6>Error Details (Development):</h6>
                    <pre class="bg-light p-3 rounded text-danger"><%= error.stack %></pre>
                </div>
            <% } %>
            
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home"></i> Go Home
            </a>
        </div>
    </div>
</div>