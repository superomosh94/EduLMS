<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Welcome to <%= app_name %></h1>
            <p class="lead mb-4">A modern Learning Management System for educational institutions</p>
            
            <% if (!user) { %>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a href="/auth/register" class="btn btn-primary btn-lg px-4 gap-3">
                        <i class="fas fa-user-plus"></i> Get Started
                    </a>
                    <a href="/auth/login" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                </div>
            <% } else { %>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a href="/dashboard" class="btn btn-primary btn-lg px-4 gap-3">
                        <i class="fas fa-tachometer-alt"></i> Go to Dashboard
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-book fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Course Management</h5>
                    <p class="card-text">Create, manage, and deliver courses with ease.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Student Tracking</h5>
                    <p class="card-text">Monitor student progress and performance.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Analytics</h5>
                    <p class="card-text">Get insights into learning outcomes and engagement.</p>
                </div>
            </div>
        </div>
    </div>
</div>