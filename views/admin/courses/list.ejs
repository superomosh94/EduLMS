<% 
    layout = 'layouts/admin-layout';
    currentPage = 'courses';
    title = 'Course Management - EduLMS';
%>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    
    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }
    
    .header-actions {
        display: flex;
        gap: 0.75rem;
    }
    
    .btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }
    
    .btn-primary {
        background: var(--primary);
        color: white;
    }
    
    .btn-primary:hover {
        background: var(--primary-dark);
        color: white;
        text-decoration: none;
    }
    
    .btn-outline-primary {
        background: transparent;
        border: 1px solid var(--primary);
        color: var(--primary);
    }
    
    .btn-outline-primary:hover {
        background: var(--primary);
        color: white;
        text-decoration: none;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .stat-card {
        background: #fff;
        border-radius: 8px;
        padding: 1.25rem;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        text-align: center;
        border-left: 4px solid var(--primary);
    }
    
    .stat-card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark);
        margin: 0 0 0.25rem 0;
    }
    
    .stat-card p {
        color: #6c757d;
        font-size: 0.875rem;
        margin: 0;
    }
    
    .card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        border: none;
        margin-bottom: 1.25rem;
    }
    
    .card-header {
        background: #fff;
        border-bottom: 1px solid #e3e6f0;
        padding: 1rem 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }
    
    .filters {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }
    
    .form-control, .form-select {
        padding: 0.5rem 0.75rem;
        border: 1px solid #d1d3e2;
        border-radius: 6px;
        font-size: 0.875rem;
        background: #fff;
    }
    
    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    
    .table-responsive {
        overflow-x: auto;
    }
    
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }
    
    .table th {
        background: #f8f9fc;
        padding: 0.75rem 1rem;
        font-weight: 600;
        color: var(--dark);
        font-size: 0.875rem;
        border-bottom: 1px solid #e3e6f0;
    }
    
    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #e3e6f0;
        font-size: 0.875rem;
    }
    
    .course-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .course-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background: var(--primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.875rem;
    }
    
    .course-details h6 {
        margin: 0;
        font-weight: 600;
        color: var(--dark);
    }
    
    .course-details small {
        color: #6c757d;
        font-size: 0.75rem;
    }
    
    .badge {
        padding: 0.35rem 0.65rem;
        border-radius: 50rem;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    .badge-success {
        background: var(--success);
        color: white;
    }
    
    .badge-warning {
        background: var(--warning);
        color: white;
    }
    
    .badge-secondary {
        background: #6c757d;
        color: white;
    }
    
    .badge-info {
        background: var(--info);
        color: white;
    }
    
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        border-radius: 4px;
    }
    
    .btn-info {
        background: var(--info);
        color: white;
        border: none;
    }
    
    .btn-warning {
        background: var(--warning);
        color: white;
        border: none;
    }
    
    .btn-danger {
        background: var(--danger);
        color: white;
        border: none;
    }
    
    .text-center {
        text-align: center;
    }
    
    .text-muted {
        color: #6c757d !important;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #6c757d;
    }
    
    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
    
    .pagination {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        margin-top: 1rem;
    }
    
    .page-link {
        padding: 0.5rem 0.75rem;
        border: 1px solid #d1d3e2;
        border-radius: 4px;
        color: var(--primary);
        text-decoration: none;
        transition: all 0.3s;
    }
    
    .page-link:hover {
        background: var(--primary);
        color: white;
        text-decoration: none;
    }
    
    .page-item.active .page-link {
        background: var(--primary);
        border-color: var(--primary);
        color: white;
    }
    
    .page-item.disabled .page-link {
        color: #6c757d;
        pointer-events: none;
        background: #f8f9fc;
    }
    
    .enrollment-progress {
        width: 80px;
        height: 6px;
        background: #e3e6f0;
        border-radius: 3px;
        overflow: hidden;
    }
    
    .progress-bar {
        height: 100%;
        background: var(--success);
        border-radius: 3px;
    }
</style>

<div class="page-header">
    <h1 class="page-title">Course Management</h1>
    <div class="header-actions">
        <a href="/admin/courses/create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>
            Create Course
        </a>
        <a href="/admin/courses/categories" class="btn btn-outline-primary">
            <i class="fas fa-folder me-1"></i>
            Manage Categories
        </a>
    </div>
</div>

<!-- Course Statistics -->
<div class="stats-grid">
    <div class="stat-card">
        <h3>
            <% if (courses && courses.length) { %>
                <%= courses.length %>
            <% } else { %>
                0
            <% } %>
        </h3>
        <p>Total Courses</p>
    </div>
    <div class="stat-card">
        <h3>
            <% if (courses && courses.length) { %>
                <%= courses.filter(c => c.is_active).length %>
            <% } else { %>
                0
            <% } %>
        </h3>
        <p>Active Courses</p>
    </div>
    <div class="stat-card">
        <h3>42</h3>
        <p>Total Enrollments</p>
    </div>
    <div class="stat-card">
        <h3>85%</h3>
        <p>Average Completion</p>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">All Courses</h5>
        <div class="filters">
            <select id="statusFilter" class="form-select">
                <option value="">All Status</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
            <select id="departmentFilter" class="form-select">
                <option value="">All Departments</option>
                <option value="computer-science">Computer Science</option>
                <option value="mathematics">Mathematics</option>
                <option value="physics">Physics</option>
                <option value="business">Business</option>
            </select>
            <input type="text" id="searchCourses" class="form-control" placeholder="Search courses...">
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="coursesTable">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Instructor</th>
                        <th>Department</th>
                        <th>Enrollment</th>
                        <th>Status</th>
                        <th>Fee</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (courses && courses.length > 0) { %>
                        <% courses.forEach(course => { %>
                            <tr>
                                <td>
                                    <div class="course-info">
                                        <div class="course-icon">
                                            <%= course.course_code.substring(0, 2) %>
                                        </div>
                                        <div class="course-details">
                                            <h6><%= course.course_name %></h6>
                                            <small><%= course.course_code %> â€¢ <%= course.credits || 3 %> credits</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <%= course.instructor_name || '<span class="text-muted">Not assigned</span>' %>
                                </td>
                                <td>
                                    <%= course.department ? course.department.charAt(0).toUpperCase() + course.department.slice(1).replace('-', ' ') : '<span class="text-muted">N/A</span>' %>
                                </td>
                                <td>
                                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                                        <div class="enrollment-progress">
                                            <div class="progress-bar" style="width: 84%"></div>
                                        </div>
                                        <small>42/50</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-<%= course.is_active ? 'success' : 'secondary' %>">
                                        <%= course.is_active ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td>
                                    <strong>KES <%= (course.course_fee || 0).toLocaleString() %></strong>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/admin/courses/<%= course.id %>" class="btn btn-sm btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/admin/courses/<%= course.id %>/manage" class="btn btn-sm btn-warning" title="Manage">
                                            <i class="fas fa-cog"></i>
                                        </a>
                                        <a href="/admin/courses/<%= course.id %>/edit" class="btn btn-sm btn-info" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <% if (course.is_active) { %>
                                            <form action="/admin/courses/<%= course.id %>/delete" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" 
                                                        onclick="return confirm('Are you sure you want to delete this course?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-success" title="Activate" 
                                                    onclick="activateCourse(<%= course.id %>)">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7">
                                <div class="empty-state">
                                    <i class="fas fa-book"></i>
                                    <h4>No Courses Found</h4>
                                    <p>Get started by creating your first course in the system.</p>
                                    <a href="/admin/courses/create" class="btn btn-primary mt-2">
                                        <i class="fas fa-plus me-1"></i>
                                        Create First Course
                                    </a>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const statusFilter = document.getElementById('statusFilter');
    const departmentFilter = document.getElementById('departmentFilter');
    const searchInput = document.getElementById('searchCourses');
    
    function filterCourses() {
        const status = statusFilter.value.toLowerCase();
        const department = departmentFilter.value.toLowerCase();
        const search = searchInput.value.toLowerCase();
        const rows = document.querySelectorAll('#coursesTable tbody tr');
        
        rows.forEach(row => {
            const statusCell = row.cells[4].textContent.toLowerCase();
            const departmentCell = row.cells[2].textContent.toLowerCase();
            const nameCell = row.cells[0].textContent.toLowerCase();
            const codeCell = row.cells[0].textContent.toLowerCase();
            const instructorCell = row.cells[1].textContent.toLowerCase();
            
            const statusMatch = !status || statusCell.includes(status);
            const departmentMatch = !department || departmentCell.includes(department);
            const searchMatch = !search || 
                nameCell.includes(search) || 
                codeCell.includes(search) ||
                instructorCell.includes(search);
            
            row.style.display = statusMatch && departmentMatch && searchMatch ? '' : 'none';
        });
    }
    
    statusFilter.addEventListener('change', filterCourses);
    departmentFilter.addEventListener('change', filterCourses);
    searchInput.addEventListener('input', filterCourses);
    
    function activateCourse(courseId) {
        if (confirm('Are you sure you want to activate this course?')) {
            // Implement activation logic here
            console.log('Activating course:', courseId);
            alert('Course activation feature coming soon!');
        }
    }
});
</script>