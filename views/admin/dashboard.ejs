<%- include('../../layouts/admin-layout', {
    title: 'Admin Dashboard - EduLMS',
    pageTitle: 'Admin Dashboard',
    currentPage: 'dashboard',
    breadcrumbs: [
        { title: 'Admin', url: '/admin/dashboard', active: true }
    ]
}) %>

<div class="row">
    <!-- System Overview -->
    <div class="col-12 mb-4">
        <div class="card bg-dark text-white">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h3 class="card-title">System Overview</h3>
                        <p class="card-text mb-0">
                            Welcome to EduLMS Admin Panel. System is running smoothly. 
                            Last backup: <strong><%= systemInfo.lastBackup ? formatDate(systemInfo.lastBackup) : 'Never' %></strong>
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="system-status">
                            <span class="status-indicator online me-2"></span>
                            <span class="h5 mb-0">System Online</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="text-primary"><%= stats.totalUsers || 0 %></h3>
                        <p class="card-text text-muted">Total Users</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x text-primary opacity-50"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-user-graduate me-1"></i><%= stats.students || 0 %> students
                    </small>
                    <br>
                    <small class="text-muted">
                        <i class="fas fa-chalkboard-teacher me-1"></i><%= stats.instructors || 0 %> instructors
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="text-success"><%= stats.totalCourses || 0 %></h3>
                        <p class="card-text text-muted">Total Courses</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-book fa-2x text-success opacity-50"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-play-circle me-1"></i><%= stats.activeCourses || 0 %> active
                    </small>
                    <br>
                    <small class="text-muted">
                        <i class="fas fa-pause-circle me-1"></i><%= stats.archivedCourses || 0 %> archived
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="text-info">$<%= stats.totalRevenue || 0 %></h3>
                        <p class="card-text text-muted">Total Revenue</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-money-bill-wave fa-2x text-info opacity-50"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-calendar-day me-1"></i>$<%= stats.todayRevenue || 0 %> today
                    </small>
                    <br>
                    <small class="text-muted">
                        <i class="fas fa-calendar-week me-1"></i>$<%= stats.weekRevenue || 0 %> this week
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 class="text-warning"><%= stats.pendingPayments || 0 %></h3>
                        <p class="card-text text-muted">Pending Actions</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x text-warning opacity-50"></i>
                    </div>
                </div>
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="fas fa-credit-card me-1"></i><%= stats.pendingPayments || 0 %> payments
                    </small>
                    <br>
                    <small class="text-muted">
                        <i class="fas fa-user-clock me-1"></i><%= stats.pendingApprovals || 0 %> approvals
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="col-md-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-line me-2"></i>System Analytics
                </h5>
            </div>
            <div class="card-body">
                <canvas id="analyticsChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/users/create" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus me-2"></i>Add User
                    </a>
                    <a href="/admin/courses/create" class="btn btn-outline-success">
                        <i class="fas fa-plus-circle me-2"></i>Create Course
                    </a>
                    <a href="/admin/finance/payments" class="btn btn-outline-warning">
                        <i class="fas fa-credit-card me-2"></i>Manage Payments
                    </a>
                    <a href="/admin/system/settings" class="btn btn-outline-info">
                        <i class="fas fa-cog me-2"></i>System Settings
                    </a>
                    <a href="/admin/system/backup" class="btn btn-outline-secondary">
                        <i class="fas fa-database me-2"></i>Backup System
                    </a>
                </div>
            </div>
        </div>

        <!-- System Health -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-heartbeat me-2"></i>System Health
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        Database
                        <span class="badge bg-success">Healthy</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        Storage
                        <span class="badge bg-<%= systemInfo.storageUsage > 90 ? 'danger' : systemInfo.storageUsage > 80 ? 'warning' : 'success' %>">
                            <%= systemInfo.storageUsage %>% used
                        </span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        Memory
                        <span class="badge bg-<%= systemInfo.memoryUsage > 90 ? 'danger' : systemInfo.memoryUsage > 80 ? 'warning' : 'success' %>">
                            <%= systemInfo.memoryUsage %>% used
                        </span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        CPU Load
                        <span class="badge bg-<%= systemInfo.cpuLoad > 90 ? 'danger' : systemInfo.cpuLoad > 80 ? 'warning' : 'success' %>">
                            <%= systemInfo.cpuLoad %>% 
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-history me-2"></i>Recent Activity
                </h5>
                <a href="/admin/system/audit-logs" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <% if (recentActivity && recentActivity.length > 0) { %>
                        <% recentActivity.forEach(activity => { %>
                            <div class="list-group-item px-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">
                                        <i class="fas fa-<%= getActivityIcon(activity.action) %> me-2 text-<%= getActivityColor(activity.action) %>"></i>
                                        <%= activity.description %>
                                    </h6>
                                    <small class="text-muted"><%= formatTimeAgo(activity.timestamp) %></small>
                                </div>
                                <p class="mb-1 small text-muted">
                                    By: <%= activity.user.firstName %> <%= activity.user.lastName %>
                                    <% if (activity.ipAddress) { %>
                                        â€¢ IP: <%= activity.ipAddress %>
                                    <% } %>
                                </p>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">No recent activity</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Approvals -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock me-2"></i>Pending Approvals
                </h5>
                <span class="badge bg-warning"><%= pendingApprovals.length %></span>
            </div>
            <div class="card-body">
                <% if (pendingApprovals && pendingApprovals.length > 0) { %>
                    <div class="list-group list-group-flush">
                        <% pendingApprovals.forEach(approval => { %>
                            <div class="list-group-item px-0">
                                <div class="d-flex w-100 justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1"><%= approval.type %></h6>
                                        <p class="mb-1 small text-muted"><%= approval.description %></p>
                                        <small class="text-muted">Submitted: <%= formatDate(approval.createdAt) %></small>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-success approve-action" 
                                                data-id="<%= approval._id %>" 
                                                data-type="<%= approval.type %>">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button class="btn btn-outline-danger reject-action" 
                                                data-id="<%= approval._id %>" 
                                                data-type="<%= approval.type %>">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                        <p class="text-muted mb-0">No pending approvals</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- User Registration Chart -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-user-plus me-2"></i>User Registrations
                </h5>
            </div>
            <div class="card-body">
                <canvas id="userRegistrationsChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>

    <!-- Payment Methods Distribution -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-credit-card me-2"></i>Payment Methods
                </h5>
            </div>
            <div class="card-body">
                <canvas id="paymentMethodsChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
// Analytics Chart
const analyticsCtx = document.getElementById('analyticsChart').getContext('2d');
const analyticsChart = new Chart(analyticsCtx, {
    type: 'line',
    data: {
        labels: <%= JSON.stringify(analytics.labels) %>,
        datasets: [
            {
                label: 'User Registrations',
                data: <%= JSON.stringify(analytics.registrations) %>,
                borderColor: '#007bff',
                backgroundColor: 'rgba(0, 123, 255, 0.1)',
                tension: 0.4,
                fill: true
            },
            {
                label: 'Course Enrollments',
                data: <%= JSON.stringify(analytics.enrollments) %>,
                borderColor: '#28a745',
                backgroundColor: 'rgba(40, 167, 69, 0.1)',
                tension: 0.4,
                fill: true
            },
            {
                label: 'Payments',
                data: <%= JSON.stringify(analytics.payments) %>,
                borderColor: '#ffc107',
                backgroundColor: 'rgba(255, 193, 7, 0.1)',
                tension: 0.4,
                fill: true
            }
        ]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                display: true,
                position: 'top'
            }
        },
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

// User Registrations Chart
const userRegCtx = document.getElementById('userRegistrationsChart').getContext('2d');
const userRegChart = new Chart(userRegCtx, {
    type: 'bar',
    data: {
        labels: <%= JSON.stringify(userStats.labels) %>,
        datasets: [{
            label: 'New Users',
            data: <%= JSON.stringify(userStats.data) %>,
            backgroundColor: [
                '#007bff', '#28a745', '#ffc107', '#dc3545',
                '#6c757d', '#17a2b8', '#e83e8c', '#fd7e14'
            ]
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                display: false
            }
        }
    }
});

// Payment Methods Chart
const paymentMethodsCtx = document.getElementById('paymentMethodsChart').getContext('2d');
const paymentMethodsChart = new Chart(paymentMethodsCtx, {
    type: 'doughnut',
    data: {
        labels: <%= JSON.stringify(paymentMethods.labels) %>,
        datasets: [{
            data: <%= JSON.stringify(paymentMethods.data) %>,
            backgroundColor: [
                '#007bff', '#28a745', '#ffc107', '#dc3545', '#6c757d'
            ]
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});

// Approval Actions
document.querySelectorAll('.approve-action').forEach(button => {
    button.addEventListener('click', function() {
        const id = this.dataset.id;
        const type = this.dataset.type;
        handleApproval(id, type, 'approved');
    });
});

document.querySelectorAll('.reject-action').forEach(button => {
    button.addEventListener('click', function() {
        const id = this.dataset.id;
        const type = this.dataset.type;
        handleApproval(id, type, 'rejected');
    });
});

function handleApproval(id, type, action) {
    if (confirm(`Are you sure you want to ${action} this ${type}?`)) {
        fetch(`/admin/approvals/${id}/${action}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error processing approval');
        });
    }
}

function getActivityIcon(action) {
    const icons = {
        'create': 'plus-circle',
        'update': 'edit',
        'delete': 'trash',
        'login': 'sign-in-alt',
        'logout': 'sign-out-alt',
        'payment': 'credit-card',
        'enrollment': 'user-plus'
    };
    return icons[action] || 'circle';
}

function getActivityColor(action) {
    const colors = {
        'create': 'success',
        'update': 'primary',
        'delete': 'danger',
        'login': 'info',
        'logout': 'secondary',
        'payment': 'warning',
        'enrollment': 'success'
    };
    return colors[action] || 'secondary';
}

function formatDate(dateString) {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', {
        month: 'short',
        day: 'numeric',
        year: 'numeric'
    });
}

function formatTimeAgo(dateString) {
    const date = new Date(dateString);
    const now = new Date();
    const diffMs = now - date;
    const diffMins = Math.floor(diffMs / 60000);
    const diffHours = Math.floor(diffMs / 3600000);
    const diffDays = Math.floor(diffMs / 86400000);

    if (diffMins < 1) return 'just now';
    if (diffMins < 60) return `${diffMins}m ago`;
    if (diffHours < 24) return `${diffHours}h ago`;
    if (diffDays < 7) return `${diffDays}d ago`;
    return formatDate(dateString);
}
</script>

<style>
.system-status {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.status-indicator.online {
    background-color: #28a745;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
}

.card {
    transition: transform 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-2px);
}

.list-group-item {
    border: none;
    padding-left: 0;
    padding-right: 0;
}
</style>