<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">EduLMS Admin</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Notifications</h1>
            <a href="/admin/system/notifications/create" class="btn btn-primary">
                Create Notification
            </a>
        </div>

        <% if (notifications && notifications.length > 0) { %>
            <div class="row">
                <% notifications.forEach(notification => { %>
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= notification.title %></h5>
                                <p class="card-text"><%= notification.message %></p>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <span class="badge bg-secondary"><%= notification.type %></span>
                                        <span class="badge bg-<%= notification.status === 'sent' ? 'success' : 'warning' %>">
                                            <%= notification.status %>
                                        </span>
                                    </div>
                                    <a href="/admin/system/notifications/<%= notification.id %>" 
                                       class="btn btn-sm btn-outline-primary">View</a>
                                </div>
                                <small class="text-muted d-block mt-2">
                                    <%= new Date(notification.createdAt).toLocaleDateString() %>
                                </small>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                <h4 class="alert-heading">No Notifications</h4>
                <p>There are no notifications to display.</p>
                <a href="/admin/system/notifications/create" class="btn btn-primary">
                    Create First Notification
                </a>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>