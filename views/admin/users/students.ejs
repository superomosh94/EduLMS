<% 
    layout = 'layouts/admin-layout';
    currentPage = 'students';
    title = 'Student Management - EduLMS';
%>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    
    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }
    
    .header-actions {
        display: flex;
        gap: 0.75rem;
    }
    
    .btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }
    
    .btn-primary {
        background: var(--primary);
        color: white;
    }
    
    .btn-primary:hover {
        background: var(--primary-dark);
        color: white;
        text-decoration: none;
    }
    
    .btn-outline-primary {
        background: transparent;
        border: 1px solid var(--primary);
        color: var(--primary);
    }
    
    .btn-outline-primary:hover {
        background: var(--primary);
        color: white;
        text-decoration: none;
    }
    
    .card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        border: none;
        margin-bottom: 1.25rem;
    }
    
    .card-header {
        background: #fff;
        border-bottom: 1px solid #e3e6f0;
        padding: 1rem 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }
    
    .filters {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }
    
    .form-control, .form-select {
        padding: 0.5rem 0.75rem;
        border: 1px solid #d1d3e2;
        border-radius: 6px;
        font-size: 0.875rem;
        background: #fff;
    }
    
    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    
    .table-responsive {
        overflow-x: auto;
    }
    
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }
    
    .table th {
        background: #f8f9fc;
        padding: 0.75rem 1rem;
        font-weight: 600;
        color: var(--dark);
        font-size: 0.875rem;
        border-bottom: 1px solid #e3e6f0;
    }
    
    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #e3e6f0;
        font-size: 0.875rem;
    }
    
    .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.875rem;
    }
    
    .user-details h6 {
        margin: 0;
        font-weight: 600;
        color: var(--dark);
    }
    
    .user-details small {
        color: #6c757d;
        font-size: 0.75rem;
    }
    
    .badge {
        padding: 0.35rem 0.65rem;
        border-radius: 50rem;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    .badge-success {
        background: var(--success);
        color: white;
    }
    
    .badge-warning {
        background: var(--warning);
        color: white;
    }
    
    .badge-secondary {
        background: #6c757d;
        color: white;
    }
    
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }
    
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        border-radius: 4px;
    }
    
    .btn-info {
        background: var(--info);
        color: white;
        border: none;
    }
    
    .btn-warning {
        background: var(--warning);
        color: white;
        border: none;
    }
    
    .btn-danger {
        background: var(--danger);
        color: white;
        border: none;
    }
    
    .text-center {
        text-align: center;
    }
    
    .text-muted {
        color: #6c757d !important;
    }
    
    .stats-overview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .stat-card {
        background: #fff;
        border-radius: 8px;
        padding: 1.25rem;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        text-align: center;
        border-left: 4px solid var(--primary);
    }
    
    .stat-card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark);
        margin: 0 0 0.25rem 0;
    }
    
    .stat-card p {
        color: #6c757d;
        font-size: 0.875rem;
        margin: 0;
    }
    
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #6c757d;
    }
    
    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
</style>

<div class="page-header">
    <h1 class="page-title">Student Management</h1>
    <div class="header-actions">
        <a href="/admin/users/create" class="btn btn-primary">
            <i class="fas fa-user-plus me-1"></i>
            Add New Student
        </a>
    </div>
</div>

<!-- Student Statistics -->
<div class="stats-overview">
    <div class="stat-card">
        <h3>
            <% if (students && students.length) { %>
                <%= students.length %>
            <% } else { %>
                0
            <% } %>
        </h3>
        <p>Total Students</p>
    </div>
    <div class="stat-card">
        <h3>
            <% if (students && students.length) { %>
                <%= students.filter(s => s.is_active).length %>
            <% } else { %>
                0
            <% } %>
        </h3>
        <p>Active Students</p>
    </div>
    <div class="stat-card">
        <h3>
            <% if (students && students.length) { %>
                <%= students.filter(s => !s.is_active).length %>
            <% } else { %>
                0
            <% } %>
        </h3>
        <p>Inactive Students</p>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">All Students</h5>
        <div class="filters">
            <select id="statusFilter" class="form-select">
                <option value="">All Status</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
            <input type="text" id="searchStudents" class="form-control" placeholder="Search students...">
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="studentsTable">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Student ID</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Registration Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (students && students.length > 0) { %>
                        <% students.forEach(student => { %>
                            <tr>
                                <td>
                                    <div class="user-info">
                                        <div class="user-avatar">
                                            <%= student.initials %>
                                        </div>
                                        <div class="user-details">
                                            <h6><%= student.name %></h6>
                                            <small>Student</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong><%= student.student_id %></strong>
                                </td>
                                <td><%= student.email %></td>
                                <td>
                                    <%= student.phone || '<span class="text-muted">N/A</span>' %>
                                </td>
                                <td>
                                    <span class="badge badge-<%= student.is_active ? 'success' : 'secondary' %>">
                                        <%= student.is_active ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td>
                                    <%= student.created_at ? new Date(student.created_at).toLocaleDateString() : 'N/A' %>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/admin/users/<%= student.id %>" class="btn btn-sm btn-info" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/admin/users/<%= student.id %>/edit" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <% if (student.is_active) { %>
                                            <form action="/admin/users/<%= student.id %>/delete" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" 
                                                        onclick="return confirm('Are you sure you want to delete this student?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-success" title="Activate" 
                                                    onclick="activateUser(<%= student.id %>)">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7">
                                <div class="empty-state">
                                    <i class="fas fa-user-graduate"></i>
                                    <h4>No Students Found</h4>
                                    <p>There are no students registered in the system yet.</p>
                                    <a href="/admin/users/create" class="btn btn-primary mt-2">
                                        <i class="fas fa-user-plus me-1"></i>
                                        Add First Student
                                    </a>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const statusFilter = document.getElementById('statusFilter');
    const searchInput = document.getElementById('searchStudents');
    
    function filterStudents() {
        const status = statusFilter.value.toLowerCase();
        const search = searchInput.value.toLowerCase();
        const rows = document.querySelectorAll('#studentsTable tbody tr');
        
        rows.forEach(row => {
            const statusCell = row.cells[4].textContent.toLowerCase();
            const nameCell = row.cells[0].textContent.toLowerCase();
            const emailCell = row.cells[2].textContent.toLowerCase();
            const studentIdCell = row.cells[1].textContent.toLowerCase();
            
            const statusMatch = !status || statusCell.includes(status);
            const searchMatch = !search || 
                nameCell.includes(search) || 
                emailCell.includes(search) ||
                studentIdCell.includes(search);
            
            row.style.display = statusMatch && searchMatch ? '' : 'none';
        });
    }
    
    statusFilter.addEventListener('change', filterStudents);
    searchInput.addEventListener('input', filterStudents);
    
    function activateUser(userId) {
        if (confirm('Are you sure you want to activate this student?')) {
            // Implement activation logic here
            console.log('Activating student:', userId);
            alert('Student activation feature coming soon!');
        }
    }
});
</script>