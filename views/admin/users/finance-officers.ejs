<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <%- include('../../partials/admin-header') %>
</head>
<body class="admin-layout">
    <%- include('../../partials/admin-sidebar') %>
    
    <main class="admin-main">
        <%- include('../../partials/admin-header') %>
        
        <div class="admin-content">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0">Finance Officers</h1>
                    <a href="/admin/users/create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Finance Officer
                    </a>
                </div>

                <% if (financeOfficers && financeOfficers.length > 0) { %>
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Officer</th>
                                            <th>Employee ID</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Status</th>
                                            <th>Join Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% financeOfficers.forEach(officer => { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-sm bg-success rounded-circle d-flex align-items-center justify-content-center me-2">
                                                            <span class="text-white fw-bold"><%= officer.initials %></span>
                                                        </div>
                                                        <div>
                                                            <div class="fw-semibold"><%= officer.name %></div>
                                                            <small class="text-muted">Finance Officer</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><code><%= officer.employee_id %></code></td>
                                                <td><%= officer.email %></td>
                                                <td><%= officer.phone || 'N/A' %></td>
                                                <td>
                                                    <span class="badge <%= officer.is_active ? 'bg-success' : 'bg-secondary' %>">
                                                        <%= officer.is_active ? 'Active' : 'Inactive' %>
                                                    </span>
                                                </td>
                                                <td><%= officer.created_at ? new Date(officer.created_at).toLocaleDateString() : 'N/A' %></td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a href="/admin/users/<%= officer.id %>" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/admin/users/<%= officer.id %>/edit" class="btn btn-sm btn-outline-warning">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form action="/admin/users/<%= officer.id %>/delete" method="POST" class="d-inline">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this finance officer?')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-money-check fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Finance Officers</h5>
                            <p class="text-muted">No finance officers have been added to the system yet.</p>
                            <a href="/admin/users/create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add First Finance Officer
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('../../partials/admin-scripts') %>
</body>
</html>