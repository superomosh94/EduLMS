<% 
    layout = 'layouts/admin-layout';
    currentPage = 'users';
    title = 'Create User - EduLMS';
%>

<style>
    .page-header {
        margin-bottom: 1.5rem;
    }
    
    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0 0 0.5rem 0;
    }
    
    .breadcrumb {
        color: #6c757d;
        font-size: 0.875rem;
    }
    
    .breadcrumb a {
        color: var(--primary);
        text-decoration: none;
    }
    
    .breadcrumb a:hover {
        text-decoration: underline;
    }
    
    .row {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1.5rem;
    }
    
    .card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        border: none;
        margin-bottom: 1.25rem;
    }
    
    .card-header {
        background: #fff;
        border-bottom: 1px solid #e3e6f0;
        padding: 1rem 1.25rem;
    }
    
    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }
    
    .card-body {
        padding: 1.25rem;
    }
    
    .form-group {
        margin-bottom: 1.25rem;
    }
    
    .form-label {
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 0.5rem;
        display: block;
        font-size: 0.875rem;
    }
    
    .form-control, .form-select {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #d1d3e2;
        border-radius: 6px;
        font-size: 0.875rem;
        background: #fff;
        transition: all 0.3s;
    }
    
    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    
    .form-text {
        font-size: 0.75rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
    
    .role-specific-fields {
        padding: 1rem;
        background: #f8f9fc;
        border-radius: 6px;
        border-left: 4px solid var(--primary);
        margin: 1rem 0;
    }
    
    .role-specific-fields h5 {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 0.75rem;
    }
    
    .form-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid #e3e6f0;
    }
    
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }
    
    .btn-primary {
        background: var(--primary);
        color: white;
    }
    
    .btn-primary:hover {
        background: var(--primary-dark);
        color: white;
    }
    
    .btn-secondary {
        background: #6c757d;
        color: white;
    }
    
    .btn-secondary:hover {
        background: #5a6268;
        color: white;
        text-decoration: none;
    }
    
    .tips {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    
    .tip-item {
        padding: 1rem;
        background: #e8f4fd;
        border-radius: 6px;
        border-left: 4px solid var(--info);
    }
    
    .tip-item strong {
        color: var(--dark);
        font-size: 0.875rem;
        display: block;
        margin-bottom: 0.25rem;
    }
    
    .tip-item p {
        color: #6c757d;
        font-size: 0.8rem;
        margin: 0;
    }
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    
    @media (max-width: 768px) {
        .row {
            grid-template-columns: 1fr;
        }
        
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">Create New User</h1>
    <div class="breadcrumb">
        <a href="/admin/dashboard">Home</a> / 
        <a href="/admin/users">Users</a> / 
        <span>Create User</span>
    </div>
</div>

<div class="row">
    <div class="main-content">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">User Information</h5>
            </div>
            <div class="card-body">
                <form action="/admin/users/create" method="POST" id="createUserForm">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="name" class="form-label">Full Name *</label>
                            <input type="text" id="name" name="name" class="form-control" required 
                                   value="<%= formData.name || '' %>">
                        </div>
                        <div class="form-group">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" id="phone" name="phone" class="form-control"
                                   value="<%= formData.phone || '' %>">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">Email Address *</label>
                        <input type="email" id="email" name="email" class="form-control" required
                               value="<%= formData.email || '' %>">
                    </div>

                    <div class="form-group">
                        <label for="role" class="form-label">User Role *</label>
                        <select id="role" name="role" class="form-select" required>
                            <option value="">Select Role</option>
                            <% roles.forEach(role => { %>
                                <option value="<%= role %>" <%= (formData.role === role) ? 'selected' : '' %>>
                                    <%= role.charAt(0).toUpperCase() + role.slice(1) %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Student Specific Fields -->
                    <div id="studentFields" class="role-specific-fields" style="display: none;">
                        <h5>Student Information</h5>
                        <div class="form-group">
                            <label for="admissionNumber" class="form-label">Admission Number</label>
                            <input type="text" id="admissionNumber" name="admissionNumber" class="form-control" 
                                   placeholder="Will be auto-generated">
                        </div>
                    </div>

                    <!-- Instructor Specific Fields -->
                    <div id="instructorFields" class="role-specific-fields" style="display: none;">
                        <h5>Instructor Information</h5>
                        <div class="form-group">
                            <label for="department" class="form-label">Department</label>
                            <input type="text" id="department" name="department" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="qualifications" class="form-label">Qualifications</label>
                            <textarea id="qualifications" name="qualifications" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus me-1"></i>
                            Create User
                        </button>
                        <a href="/admin/users" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="sidebar-content">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Quick Tips</h5>
            </div>
            <div class="card-body">
                <div class="tips">
                    <div class="tip-item">
                        <strong>Email Verification</strong>
                        <p>User will receive an email to verify their account upon creation.</p>
                    </div>
                    <div class="tip-item">
                        <strong>Auto-generated Password</strong>
                        <p>A temporary password will be generated and shown after user creation.</p>
                    </div>
                    <div class="tip-item">
                        <strong>Role Permissions</strong>
                        <p>Each role has different access levels and system permissions.</p>
                    </div>
                    <div class="tip-item">
                        <strong>Student/Instructor IDs</strong>
                        <p>Unique IDs are automatically generated based on the selected role.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.getElementById('role');
    const studentFields = document.getElementById('studentFields');
    const instructorFields = document.getElementById('instructorFields');

    roleSelect.addEventListener('change', function() {
        // Hide all role-specific fields
        studentFields.style.display = 'none';
        instructorFields.style.display = 'none';

        // Show fields for selected role
        if (this.value === 'student') {
            studentFields.style.display = 'block';
        } else if (this.value === 'instructor') {
            instructorFields.style.display = 'block';
        }
    });

    // Trigger change event on page load if role is pre-selected
    if (roleSelect.value) {
        roleSelect.dispatchEvent(new Event('change'));
    }
});
</script>