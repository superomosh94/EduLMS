<% 
    layout = 'layouts/admin-layout';
    currentPage = 'users';
    title = 'User Details - EduLMS';
%>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    
    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }
    
    .header-actions {
        display: flex;
        gap: 0.75rem;
    }
    
    .btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }
    
    .btn-primary {
        background: var(--primary);
        color: white;
    }
    
    .btn-primary:hover {
        background: var(--primary-dark);
        color: white;
        text-decoration: none;
    }
    
    .btn-outline-primary {
        background: transparent;
        border: 1px solid var(--primary);
        color: var(--primary);
    }
    
    .btn-outline-primary:hover {
        background: var(--primary);
        color: white;
        text-decoration: none;
    }
    
    .btn-danger {
        background: var(--danger);
        color: white;
    }
    
    .btn-danger:hover {
        background: #dc3545;
        color: white;
        text-decoration: none;
    }
    
    .user-profile {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }
    
    .profile-sidebar {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        padding: 2rem;
        text-align: center;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: var(--primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 600;
        margin: 0 auto 1.5rem;
    }
    
    .profile-name {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 0.5rem;
    }
    
    .profile-role {
        background: var(--primary);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 50rem;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 1rem;
    }
    
    .profile-status {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }
    
    .status-badge {
        padding: 0.35rem 0.75rem;
        border-radius: 50rem;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    .status-active {
        background: var(--success);
        color: white;
    }
    
    .status-inactive {
        background: #6c757d;
        color: white;
    }
    
    .profile-details {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        padding: 2rem;
    }
    
    .detail-section {
        margin-bottom: 2rem;
    }
    
    .detail-section:last-child {
        margin-bottom: 0;
    }
    
    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #f8f9fc;
    }
    
    .detail-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }
    
    .detail-item {
        display: flex;
        flex-direction: column;
    }
    
    .detail-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 0.25rem;
    }
    
    .detail-value {
        font-size: 1rem;
        color: var(--dark);
        font-weight: 500;
    }
    
    .empty-value {
        color: #6c757d;
        font-style: italic;
    }
    
    .activity-timeline {
        margin-top: 2rem;
    }
    
    .timeline-item {
        display: flex;
        gap: 1rem;
        padding: 1rem 0;
        border-bottom: 1px solid #f8f9fc;
    }
    
    .timeline-item:last-child {
        border-bottom: none;
    }
    
    .timeline-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #f8f9fc;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
        flex-shrink: 0;
    }
    
    .timeline-content {
        flex: 1;
    }
    
    .timeline-text {
        color: var(--dark);
        margin-bottom: 0.25rem;
    }
    
    .timeline-time {
        font-size: 0.75rem;
        color: #6c757d;
    }
    
    @media (max-width: 768px) {
        .user-profile {
            grid-template-columns: 1fr;
        }
        
        .detail-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">User Details</h1>
    <div class="header-actions">
        <a href="/admin/users/<%= viewUser.id %>/edit" class="btn btn-primary">
            <i class="fas fa-edit me-1"></i>
            Edit User
        </a>
        <a href="/admin/users" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i>
            Back to Users
        </a>
    </div>
</div>

<div class="user-profile">
    <div class="profile-sidebar">
        <div class="profile-avatar">
            <%= viewUser.initials %>
        </div>
        <h2 class="profile-name"><%= viewUser.name %></h2>
        <div class="profile-role" style="background: 
            <%= viewUser.role === 'admin' ? 'var(--danger)' : 
                viewUser.role === 'instructor' ? 'var(--info)' : 
                viewUser.role === 'finance' ? 'var(--warning)' : 'var(--primary)' %>">
            <%= viewUser.role.charAt(0).toUpperCase() + viewUser.role.slice(1) %>
        </div>
        <div class="profile-status">
            <span class="status-badge <%= viewUser.is_active ? 'status-active' : 'status-inactive' %>">
                <%= viewUser.is_active ? 'Active' : 'Inactive' %>
            </span>
        </div>
        <div class="profile-actions">
            <% if (viewUser.is_active) { %>
                <form action="/admin/users/<%= viewUser.id %>/delete" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm" 
                            onclick="return confirm('Are you sure you want to delete this user?')">
                        <i class="fas fa-trash me-1"></i>
                        Delete User
                    </button>
                </form>
            <% } else { %>
                <button class="btn btn-success btn-sm" onclick="activateUser(<%= viewUser.id %>)">
                    <i class="fas fa-check me-1"></i>
                    Activate User
                </button>
            <% } %>
        </div>
    </div>

    <div class="profile-details">
        <div class="detail-section">
            <h3 class="section-title">Basic Information</h3>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Full Name</span>
                    <span class="detail-value"><%= viewUser.name %></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Email Address</span>
                    <span class="detail-value"><%= viewUser.email %></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Phone Number</span>
                    <span class="detail-value">
                        <%= viewUser.phone || '<span class="empty-value">Not provided</span>' %>
                    </span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">User ID</span>
                    <span class="detail-value">
                        <% if (viewUser.student_id) { %>
                            <%= viewUser.student_id %>
                        <% } else if (viewUser.teacher_id) { %>
                            <%= viewUser.teacher_id %>
                        <% } else if (viewUser.employee_id) { %>
                            <%= viewUser.employee_id %>
                        <% } else { %>
                            <%= viewUser.id %>
                        <% } %>
                    </span>
                </div>
            </div>
        </div>

        <div class="detail-section">
            <h3 class="section-title">Account Information</h3>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Account Status</span>
                    <span class="detail-value">
                        <span class="status-badge <%= viewUser.is_active ? 'status-active' : 'status-inactive' %>">
                            <%= viewUser.is_active ? 'Active' : 'Inactive' %>
                        </span>
                    </span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Role</span>
                    <span class="detail-value">
                        <span class="profile-role" style="background: 
                            <%= viewUser.role === 'admin' ? 'var(--danger)' : 
                                viewUser.role === 'instructor' ? 'var(--info)' : 
                                viewUser.role === 'finance' ? 'var(--warning)' : 'var(--primary)' %>">
                            <%= viewUser.role.charAt(0).toUpperCase() + viewUser.role.slice(1) %>
                        </span>
                    </span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Registration Date</span>
                    <span class="detail-value">
                        <%= viewUser.created_at ? new Date(viewUser.created_at).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                        }) : 'N/A' %>
                    </span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Last Login</span>
                    <span class="detail-value">
                        <span class="empty-value">Not available</span>
                    </span>
                </div>
            </div>
        </div>

        <% if (viewUser.role === 'student' || viewUser.role === 'instructor') { %>
            <div class="detail-section">
                <h3 class="section-title">
                    <%= viewUser.role === 'student' ? 'Student' : 'Instructor' %> Information
                </h3>
                <div class="detail-grid">
                    <% if (viewUser.role === 'student') { %>
                        <div class="detail-item">
                            <span class="detail-label">Admission Number</span>
                            <span class="detail-value">
                                <%= viewUser.student_id || '<span class="empty-value">Not assigned</span>' %>
                            </span>
                        </div>
                    <% } else if (viewUser.role === 'instructor') { %>
                        <div class="detail-item">
                            <span class="detail-label">Instructor ID</span>
                            <span class="detail-value">
                                <%= viewUser.teacher_id || '<span class="empty-value">Not assigned</span>' %>
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Employee ID</span>
                            <span class="detail-value">
                                <%= viewUser.employee_id || '<span class="empty-value">Not assigned</span>' %>
                            </span>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>

        <div class="detail-section">
            <h3 class="section-title">Recent Activity</h3>
            <div class="activity-timeline">
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <div class="timeline-content">
                        <div class="timeline-text">Account created</div>
                        <div class="timeline-time">
                            <%= viewUser.created_at ? new Date(viewUser.created_at).toLocaleDateString() : 'Recently' %>
                        </div>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="timeline-content">
                        <div class="timeline-text">Welcome email sent</div>
                        <div class="timeline-time">2 days ago</div>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                    <div class="timeline-content">
                        <div class="timeline-text">Account activated</div>
                        <div class="timeline-time">1 week ago</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

