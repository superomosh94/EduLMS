<% 
    layout = 'layouts/admin-layout';
    currentPage = 'users';
    title = 'Edit User - EduLMS';
%>

<style>
    .page-header {
        margin-bottom: 1.5rem;
    }
    
    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0 0 0.5rem 0;
    }
    
    .breadcrumb {
        color: #6c757d;
        font-size: 0.875rem;
    }
    
    .breadcrumb a {
        color: var(--primary);
        text-decoration: none;
    }
    
    .breadcrumb a:hover {
        text-decoration: underline;
    }
    
    .row {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1.5rem;
    }
    
    .card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        border: none;
        margin-bottom: 1.25rem;
    }
    
    .card-header {
        background: #fff;
        border-bottom: 1px solid #e3e6f0;
        padding: 1rem 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .user-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark);
        margin: 0;
    }
    
    .user-subtitle {
        color: #6c757d;
        font-size: 0.875rem;
        margin: 0;
    }
    
    .card-body {
        padding: 1.25rem;
    }
    
    .form-group {
        margin-bottom: 1.25rem;
    }
    
    .form-label {
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 0.5rem;
        display: block;
        font-size: 0.875rem;
    }
    
    .form-control, .form-select {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #d1d3e2;
        border-radius: 6px;
        font-size: 0.875rem;
        background: #fff;
        transition: all 0.3s;
    }
    
    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
    }
    
    .form-text {
        font-size: 0.75rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
    
    .form-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }
    
    .form-check-input {
        width: 18px;
        height: 18px;
        border-radius: 4px;
        border: 1px solid #d1d3e2;
    }
    
    .form-check-label {
        font-weight: 500;
        color: var(--dark);
        font-size: 0.875rem;
    }
    
    .form-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px solid #e3e6f0;
    }
    
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
    }
    
    .btn-primary {
        background: var(--primary);
        color: white;
    }
    
    .btn-primary:hover {
        background: var(--primary-dark);
        color: white;
    }
    
    .btn-secondary {
        background: #6c757d;
        color: white;
    }
    
    .btn-secondary:hover {
        background: #5a6268;
        color: white;
        text-decoration: none;
    }
    
    .btn-outline-danger {
        background: transparent;
        border: 1px solid var(--danger);
        color: var(--danger);
    }
    
    .btn-outline-danger:hover {
        background: var(--danger);
        color: white;
        text-decoration: none;
    }
    
    .tips {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    
    .tip-item {
        padding: 1rem;
        background: #f8f9fc;
        border-radius: 6px;
        border-left: 4px solid var(--info);
    }
    
    .tip-item strong {
        color: var(--dark);
        font-size: 0.875rem;
        display: block;
        margin-bottom: 0.25rem;
    }
    
    .tip-item p {
        color: #6c757d;
        font-size: 0.8rem;
        margin: 0;
    }
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    
    .readonly-field {
        background: #f8f9fc;
        border-color: #e3e6f0;
        color: #6c757d;
    }
    
    @media (max-width: 768px) {
        .row {
            grid-template-columns: 1fr;
        }
        
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">Edit User</h1>
    <div class="breadcrumb">
        <a href="/admin/dashboard">Home</a> / 
        <a href="/admin/users">Users</a> / 
        <a href="/admin/users/<%= editUser.id %>"><%= editUser.name %></a> / 
        <span>Edit</span>
    </div>
</div>

<div class="row">
    <div class="main-content">
        <div class="card">
            <div class="card-header">
                <div class="user-avatar">
                    <%= editUser.initials %>
                </div>
                <div>
                    <h5 class="card-title"><%= editUser.name %></h5>
                    <p class="user-subtitle">
                        <%= editUser.role.charAt(0).toUpperCase() + editUser.role.slice(1) %> â€¢ 
                        <%= editUser.email %>
                    </p>
                </div>
            </div>
            <div class="card-body">
                <form action="/admin/users/<%= editUser.id %>/edit" method="POST" id="editUserForm">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="name" class="form-label">Full Name *</label>
                            <input type="text" id="name" name="name" class="form-control" required 
                                   value="<%= editUser.name %>">
                        </div>
                        <div class="form-group">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" id="phone" name="phone" class="form-control"
                                   value="<%= editUser.phone || '' %>">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">Email Address *</label>
                        <input type="email" id="email" name="email" class="form-control" required
                               value="<%= editUser.email %>">
                    </div>

                    <div class="form-group">
                        <label class="form-label">User Role</label>
                        <input type="text" class="form-control readonly-field" readonly
                               value="<%= editUser.role.charAt(0).toUpperCase() + editUser.role.slice(1) %>">
                        <small class="form-text">Role cannot be changed after user creation</small>
                    </div>

                    <div class="form-group">
                        <label class="form-label">User ID</label>
                        <input type="text" class="form-control readonly-field" readonly
                               value="<%= editUser.student_id || editUser.teacher_id || editUser.employee_id || editUser.id %>">
                    </div>

                    <div class="form-check">
                        <input type="checkbox" id="is_active" name="is_active" class="form-check-input"
                               <%= editUser.is_active ? 'checked' : '' %> value="1">
                        <label for="is_active" class="form-check-label">
                            Active Account
                        </label>
                    </div>
                    <small class="form-text">
                        Uncheck to deactivate this user account. Deactivated users cannot log in.
                    </small>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>
                            Update User
                        </button>
                        <a href="/admin/users/<%= editUser.id %>" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>
                            Cancel
                        </a>
                        <a href="/admin/users/<%= editUser.id %>/change-password" class="btn btn-outline-danger">
                            <i class="fas fa-key me-1"></i>
                            Reset Password
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="sidebar-content">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Editing Tips</h5>
            </div>
            <div class="card-body">
                <div class="tips">
                    <div class="tip-item">
                        <strong>Email Changes</strong>
                        <p>User will need to verify their new email address if changed.</p>
                    </div>
                    <div class="tip-item">
                        <strong>Account Status</strong>
                        <p>Deactivating an account will prevent the user from logging in.</p>
                    </div>
                    <div class="tip-item">
                        <strong>Role Restrictions</strong>
                        <p>User roles cannot be modified after account creation for security reasons.</p>
                    </div>
                    <div class="tip-item">
                        <strong>Password Reset</strong>
                        <p>Use the "Reset Password" button to generate a new temporary password.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title">User Statistics</h5>
            </div>
            <div class="card-body">
                <div class="detail-grid" style="grid-template-columns: 1fr; gap: 1rem;">
                    <div class="detail-item">
                        <span class="detail-label">Member Since</span>
                        <span class="detail-value">
                            <%= editUser.created_at ? new Date(editUser.created_at).toLocaleDateString() : 'N/A' %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Last Updated</span>
                        <span class="detail-value">
                            <%= editUser.updated_at ? new Date(editUser.updated_at).toLocaleDateString() : 'N/A' %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Account Status</span>
                        <span class="detail-value">
                            <span class="status-badge <%= editUser.is_active ? 'status-active' : 'status-inactive' %>">
                                <%= editUser.is_active ? 'Active' : 'Inactive' %>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('editUserForm');
    
    form.addEventListener('submit', function(e) {
        const name = document.getElementById('name').value.trim();
        const email = document.getElementById('email').value.trim();
        
        if (!name || !email) {
            e.preventDefault();
            alert('Please fill in all required fields.');
            return;
        }
        
        if (!isValidEmail(email)) {
            e.preventDefault();
            alert('Please enter a valid email address.');
            return;
        }
    });
    
    function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }
});
</script>